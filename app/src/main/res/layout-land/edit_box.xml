<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


    <TextView
        android:id="@+id/txtmessage"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:textSize="16sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
            <EditText
                android:hint="@string/name"
                android:id="@+id/nome"
                android:layout_width="300dp"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:autofillHints="" />
            <EditText
                android:hint="@string/surname"
                android:id="@+id/apelido"
                android:layout_below="@+id/nome"
                android:inputType="text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:autofillHints="" />
            <EditText
                android:hint="@string/profession"
                android:id="@+id/profissao"
                android:layout_below="@+id/apelido"
                android:inputType="text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:autofillHints="" />
            <EditText
                android:hint="@string/gender"
                android:id="@+id/genero"
                android:inputType="text"
                android:layout_below="@+id/profissao"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:autofillHints="" />
            <EditText
                android:hint="@string/address"
                android:id="@+id/morada"
                android:inputType="text"
                android:layout_below="@+id/genero"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:autofillHints="" />
            <EditText
                android:hint="@string/postal"
                android:id="@+id/postaladdress"
                android:inputType="text"
                android:layout_below="@+id/morada"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:importantForAutofill="no" />
            <EditText
                android:hint="@string/age"
                android:id="@+id/idade"
                android:inputType="number"
                android:layout_below="@+id/postaladdress"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:importantForAutofill="no" />
        <EditText
            android:hint="@string/phonenumber"
            android:id="@+id/numero"
            android:inputType="number"
            android:layout_below="@+id/idade"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:importantForAutofill="no" />
      

            <Button
                android:id="@+id/btdone"
                android:layout_below="@+id/numero"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>